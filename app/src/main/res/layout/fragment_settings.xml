<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_email_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/button_weibo_login"
        android:text="@string/fragment_setting_email_login" />

    <Button
        android:id="@+id/button_weibo_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/fragment_setting_weibo_login" />

    <Button
        android:id="@+id/button_daily_recommendation"
        android:layout_centerHorizontal="true"
        android:text="@string/fragment_setting_daily_recommendation"
        android:layout_below="@id/button_weibo_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>